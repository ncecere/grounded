{
  "name": "grounded",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "dev:api": "bun run --filter @grounded/api dev",
    "dev:web": "bun run --filter @grounded/web dev",
    "dev:ingestion": "bun run --filter @grounded/ingestion-worker dev",
    "dev:scraper": "bun run --filter @grounded/scraper-worker dev",
    "build": "bun run --filter '*' build",
    "lint": "bun run --filter '*' lint",
    "test": "bun run --filter '*' test",
    "db:generate": "bun run --filter @grounded/db generate",
    "db:migrate": "bun run --filter @grounded/db migrate",
    "db:push": "bun run --filter @grounded/db push",
    "db:studio": "bun run --filter @grounded/db studio",
    "typecheck": "bun run --filter '*' typecheck",
    "docker:dev": "docker compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "shadcn": "3.6.3",
    "typescript": "^5.7.2"
  }
}
